<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/det_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/det_ne1"
        android:layout_alignBottom="@id/det_ne2"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/det_ne1"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/ic_left_arrow" />

    <TextView
        android:id="@+id/det_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/det_ne13"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="12dp"
        android:text="customer care"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/det_ne1"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_new_servii_logoartboard_3" />

    <View
        android:id="@+id/det_ne2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignTop="@id/det_ne1"
        android:layout_marginTop="91dp"
        android:background="@color/dark_grey" />

    <View
        android:id="@+id/det_ne12"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/det_ne13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Need help? Contact                               "
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/det_ne2"
        android:layout_marginTop="10dp"
        android:layout_above="@id/det_ne12"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/det_ne11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/det_ne10"
                android:layout_alignTop="@+id/det_ne10"
                android:layout_alignRight="@+id/det_ne10"
                android:layout_alignBottom="@id/det_ne10"
                app:srcCompat="@drawable/ic_add" />

            <View
                android:id="@+id/det_showAddress"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@id/det_ne5"
                android:layout_alignLeft="@id/det_ne5"
                android:layout_alignRight="@id/det_ne5"
                android:layout_marginTop="40dp"
                android:background="@drawable/box_darkgrey" />

            <ImageView
                android:id="@+id/det_ne10"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/det_addAddress"
                android:layout_alignTop="@id/det_addAddress"
                android:layout_alignBottom="@id/det_addAddress"
                android:layout_marginLeft="35dp"
                app:srcCompat="@drawable/ic_minimize" />

            <TextView
                android:id="@+id/det_ne4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/det_ne3"
                android:layout_alignTop="@id/det_ne3"
                android:layout_alignRight="@id/det_ne3"
                android:layout_marginTop="30dp"
                android:text="Confirm your saved details"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <Button
                android:id="@+id/det_continue"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/det_addAddress"
                android:layout_alignTop="@id/det_addAddress"
                android:layout_alignRight="@id/det_addAddress"
                android:layout_marginTop="75dp"
                android:background="@drawable/button"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <View
                android:id="@+id/det_ne9"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_below="@id/det_showAddress"
                android:layout_alignLeft="@id/det_showAddress"
                android:layout_alignRight="@id/det_showAddress"
                android:layout_marginTop="-1dp"
                android:background="@color/orange" />

            <TextView
                android:id="@+id/det_ne3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="VERIFY DETAILS"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/det_addAddress"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/det_showAddress"
                android:layout_alignLeft="@id/det_showAddress"
                android:layout_alignRight="@id/det_showAddress"
                android:background="@drawable/box_darkgrey"
                android:gravity="center"
                android:text="Change address"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <View
                android:id="@+id/det_ne5"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignTop="@id/det_ne4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/box_darkgrey" />

            <TextView
                android:id="@+id/det_vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/det_ne5"
                android:layout_alignTop="@id/det_ne5"
                android:layout_alignRight="@id/det_ne5"
                android:layout_alignBottom="@id/det_ne5"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center|left"
                android:text="TextView"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/det_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/det_showAddress"
                android:layout_alignTop="@id/det_showAddress"
                android:layout_alignRight="@id/det_showAddress"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>